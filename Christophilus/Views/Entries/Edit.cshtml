@model Christophilus.Models.JournalEntry

@{
    ViewBag.Title = "Edit " + Model.Day;
}

@section head {
  <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.min.js" type="text/javascript"></script>
  <script src="@Href("~/Scripts/edit-entry.js")" type="text/javascript"></script>
}

<h2 class="editing-title">@Model.Day [<span id="status">Edit mode</span>] <a class="fade-nav" href="@Url.Action("Index")"><img src="@Href("~/Content/img/list.png")" alt="List" /></a></h2>
<div contenteditable="true" id="editable-entry" version="@Model.Version" save-action="@Url.Action("Update", "Entries", new { day = Model.Day })" day="@Model.Day" class="entry-body">@(new MvcHtmlString(Model.Body))</div>